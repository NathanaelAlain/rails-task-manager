<div class="container p-3">
  <h1> <%= @task.title  %> </h1>
  <p> <%= @task.details %> </p>
  <p>
    <% if @task.completed == true %>
    <i class="far fa-check-square"></i><%= "Task done" %>
    <% else %>
    <i class="fal fa-square"></i><%= "Task need to be done" %>
    <% end %>
  </p>


  <%= link_to "edit this Task", edit_task_path %>

  <%= link_to "return to the Task list", tasks_path %>
</div>
